{
  "name": "lib-starter-typescript",
  "version": "1.0.0",
  "description": "Produce universal library with webpack and typescript",
  "main": "lib/library.js",
  "types": "lib/types/index.d.ts",
  "scripts": {
    "build": "webpack --env dev && webpack --env build",
    "serve": "webpack --progress --colors --watch --env dev",
    "test": "jest --coverage",
    "test:watch": "mocha --recursive --require ts-node/register --colors -w ./**/*.spec.ts",
    "doc:gen": "typedoc --out dist/docs --target es6 --theme minimal --mode file src --exclude \"**/*.spec.ts\" --excludeNotExported",
    "doc:deploy": "ts-node tools/gh-pages-publish"
  },
  "keywords": [
    "webpack",
    "typescript",
    "starter",
    "library",
    "universal",
    "umd",
    "commonjs"
  ],
  "author": "Horace Lee",
  "license": "MIT",
  "files": [
    "lib"
  ],
  "dependencies": {
    "date-fns": "1.29.0",
    "lodash": "4.17.4"
  },
  "devDependencies": {
    "@types/chai": "4.0.4",
    "@types/chai-arrays": "1.0.2",
    "@types/chai-as-promised": "7.1.0",
    "@types/chai-string": "1.1.31",
    "@types/jest": "^22.1.0",
    "@types/lodash": "4.14.80",
    "@types/mocha": "2.2.43",
    "@types/node": "8.5.2",
    "@types/sinon": "2.3.6",
    "@types/sinon-chai": "2.7.29",
    "@types/supertest": "2.0.3",
    "awesome-typescript-loader": "3.4.1",
    "babel-cli": "6.26.0",
    "babel-core": "6.26.0",
    "babel-plugin-add-module-exports": "0.2.1",
    "babel-preset-env": "1.6.1",
    "chai": "4.1.2",
    "chai-arrays": "2.0.0",
    "chai-as-promised": "7.1.1",
    "chai-shallow-deep-equal": "1.4.6",
    "chai-string": "1.4.0",
    "fork-ts-checker-webpack-plugin": "^0.2.10",
    "jest": "^22.1.4",
    "mocha": "3.5.3",
    "sinon": "4.1.2",
    "sinon-chai": "2.14.0",
    "supertest": "3.0.0",
    "supertest-chai": "0.0.8",
    "ts-jest": "^22.0.1",
    "ts-loader": "3.2.0",
    "ts-mocha": "1.0.3",
    "ts-node": "4.1.0",
    "tslint": "^5.9.1",
    "tslint-config-prettier": "^1.6.0",
    "typedoc": "0.9.0",
    "typescript": "2.6.2",
    "webpack": "3.10.0",
    "yargs": "10.0.3"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "mapCoverage": true,
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
